{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"moduleResolution": "node",
		"strict": true,

		"rootDir": "src",
		"outDir": "lua",

		// Use Gmod Externs
		"types": ["gmod-types"],

		// Ignore duplicate identifiers
		"skipLibCheck": true
	},
	"tstl": {
		"luaTarget": "JIT"
	}
}